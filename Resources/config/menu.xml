<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="symfony_cmf_blog.menu_voter.parent_class">Symfony\Cmf\Bundle\MenuBundle\Voter\RequestParentContentIdentityVoter</parameter>
    </parameters>

    <services>

        <service id="symfony_cmf_blog.menu_voter.parent" class="%symfony_cmf_blog.menu_voter.parent_class%">
            <argument>%symfony_cmf_blog.content_key%</argument>
            <argument>%symfony_cmf_blog.post_class%</argument>
            <tag name="symfony_cmf_menu.voter" request="true"/>
        </service>

    </services>

</container>

